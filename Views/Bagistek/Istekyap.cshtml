    <style>
        .deneme {
            width: 700px;
            height: 500px;
            padding-left: 20px;
            border: 2px solid;
            border-color: whitesmoke;
            border-radius: 15px 50px;
            background-color: white;
            margin-left:400px;
            margin-top:120px;
        }
            .deneme:hover {
                box-shadow: 2px 2px 3px black;
            }
    </style>
</head>
<body style=" background-color: #c94c4c;">

    @if (Session["kmail"] == null)
    {
        <script>window.alert("Herhangi bir istekte bulunmanız için giriş yapmanız gerekmektedir.");
            window.location.href = 'https://localhost:44309/Kullanici/Login';
        </script>

    }
    else
    {

<div>

    @using (Html.BeginForm("Istekyap", "Bagistek", FormMethod.Post))
    {
    <div class="deneme">
        <h3 align="left">İstekte Bulunmanız İçin Yapmanız Gerekenler Çok Kolay. Bilgileri Uygun Şekilde Doldurun ve İsteğinize Uygun Anahtar Kelimeleri Belirtin.</h3>
        <hr />
        <label>Başlık</label><br />
        <input type="text" name="baslik" class="bootstrap-tagsinput" required/><br /><br />
        <label>Açıklama</label><br />
        <textarea class="bootstrap-tagsinput" rows="5" cols="40" name="aciklama" id="aciklama" required></textarea><br /> <br />
        <label>Etiket</label><br />
        <input type="text" name="tag" data-role="tagsinput" required/><br /><br />
        <div style="padding-left:20px;">
            <input type="submit" value="Kaydet" class="btn default" />  /
            <a href="https://localhost:44309"><i class="fa fa-home">Anasayfaya Dön</i></a>  /
             <a href="https://localhost:44309/Bagistek/Istekler"><i class="fa fa-angle-double-left"> İstek Listesine Dön</i></a>

        </div>
    </div>
    }

</div>
    }
