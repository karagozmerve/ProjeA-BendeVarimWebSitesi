@model IEnumerable<bendevarimproje.Models.bagisekle>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (Session["kadi"] == null)
{
    <script>
        window.alert("Herhangi bir işlem yapabilmeniz için giriş yapmanız gerekmektedir.");
        window.location.href = 'https://localhost:44309/Admin/Giris';
    </script>

}
else
{
    <head>
        <title>Eklenen Bağışlar</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Ben de Varım</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
        <!-- Third party plugin CSS-->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="~/Content/css/styles.css" rel="stylesheet" />
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>
    <br />
    <h2 align="center">~ Eklenen Bağışları Listele/Düzenle ~</h2>
    <hr class="divider my-4" />
    <table class="table">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.bagisadi)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.aciklama)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.miktar)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.bagisfotograf)
            </th>
            <th style="text-align:center">
                <label>İşlem Seçiniz</label>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.bagisadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aciklama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.miktar)
                </td>
                <td>
                    <img src="~/Content/images/@item.bagisfotograf" width="150" height="150" />
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("Düzenle", "EBagisDuzenle", new { id = item.id }, new { @class = "btn btn-light btn-sm" })  |
                    @Html.ActionLink("Sil", "EBagisSil", new { id = item.id }, new { @class = "btn btn-light btn-sm" })
                </td>
            </tr>
        }

    </table>

}
